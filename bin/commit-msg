#!/usr/bin/env bash

regex="^(fix|feat|chore)(\([a-zA-Z0-9]*\))?: (.*)$"
var=$(head -n 1 .git/COMMIT_EDITMSG)

if [[ "$var" =~ $regex ]]
then
    exit 0
else
    echo "Commit msg must be like : <feat|fix|chore>[(tag)]: commit msg"
    echo "ex : fix(composer): add commit msg check on git"
    exit 1
fi