{
    "name": "psr-logger",
    "type": "library",
    "description": "PHP Logger",
    "version" : "0.1.0",
    "require": {
        "psr/log": "~1.0.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "~2.9.1",
        "phpunit/phpunit": "~6.1.0",
        "rpkamp/fancy-testdox-printer": "~0.2.5"
    },
    "config": {
        "bin-dir": "bin",
        "vendor-dir": "vendor"
    },
    "autoload": {
        "psr-4": {
            "Kod\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kod\\Tests\\": "tests/lib"
        }
    },
    "scripts": {
        "test": [
            "@cs",
            "@tu"
        ],
        "cs": [
            "env ./bin/phpcs --colors --encoding=utf-8 --standard=ruleset.xml --runtime-set ignore_warnings_on_exit 1  ./src"
        ],
        "cs-fix" : [
            "env ./bin/phpcbf --encoding=utf-8 --standard=ruleset.xml  -n --runtime-set ignore_warnings_on_exit 1 --ignore=src/lib/vendor/ src"
        ],
        "tu": [
            "env ./bin/phpunit -c tests/phpunit.xml"
        ],
        "cover-tu": [
            "env ./bin/phpunit -c tests/phpunit-cover.xml"
        ]
    }
}
